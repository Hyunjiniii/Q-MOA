<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="6dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/mytip_certificate_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="자격증 이름"/>


            <LinearLayout
                android:id="@+id/left_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tip_item_contents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="start"
                    android:text="Contents"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tip_item_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="7.5dp"
                            android:gravity="start"
                            android:text="NickName"
                            android:textColor="#777777"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="7.5dp"
                            android:background="#707070" />

                        <TextView
                            android:id="@+id/tip_item_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="7.5dp"
                            android:gravity="start"
                            android:text="Date"
                            android:textColor="#777777"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <ToggleButton
                            android:id="@+id/tip_like_button"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:textOn=""
                            android:textOff=""
                            android:layout_marginEnd="3dp"
                            android:background="@drawable/like_off_ic" />

                        <TextView
                            android:id="@+id/tip_like_result"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_marginEnd="8dp"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <ToggleButton
                            android:id="@+id/tip_unlike_button"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginEnd="3dp"
                            android:textOn=""
                            android:textOff=""
                            android:background="@drawable/unlike_off_ic" />

                        <TextView
                            android:id="@+id/tip_unlike_result"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>